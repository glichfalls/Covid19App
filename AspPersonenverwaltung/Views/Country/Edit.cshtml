@model AspPersonenverwaltung.Models.Country

@{
    ViewData["Title"] = "Edit";
}


<h3>Land Bearbeiten</h3>
<hr />
<div class="row">
    <form asp-action="Edit">
        <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*<input type="hidden" asp-for="Id" />*@
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsoCode" class="control-label"></label>
                <input asp-for="IsoCode" class="form-control" />
                <span asp-validation-for="IsoCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Population" class="control-label"></label>
                <input asp-for="Population" class="form-control" />
                <span asp-validation-for="Population" class="text-danger"></span>
            </div>
        </div>
        <hr />
        <div class="col-xs-12">
            <div class="form-group">
                <input type="submit" value="Speichern" class="btn btn-primary" />
            </div>
            <div style="float:left">
                <a asp-controller="Home" asp-action="Index">zurück zur Liste</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
