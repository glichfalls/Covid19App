@model AspPersonenverwaltung.Models.Country

@{
    ViewData["Title"] = "Create";
}

<h3>Land Erstellen</h3>

<hr />

<div class="row">
    <form asp-action="Create">
        <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*<input type="hidden" asp-for="Id" />*@
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Continent" class="control-label"></label>
                <select asp-for="Continent.Id" asp-items="@ViewBag.Continents" class="form-control"></select>
                <input asp-for="Continent.Id" class="form-control" type="hidden" />
                <span asp-validation-for="Continent.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsoCode" class="control-label"></label>
                <input asp-for="IsoCode" class="form-control" />
                <span asp-validation-for="IsoCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Population" class="control-label"></label>
                <input asp-for="Population" class="form-control" />
                <span asp-validation-for="Population" class="text-danger"></span>
            </div>
        </div>
        <hr />
        <div class="col-xs-12">
            <input type="submit" value="Speichern" class="btn btn-primary"/>
            <a class="btn btn-danger" asp-action="Index">Abbrechen</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
