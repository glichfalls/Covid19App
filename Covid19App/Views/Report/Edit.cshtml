@model Covid19App.Models.Report

@{
    ViewData["Title"] = "Edit";
}

<h3>Bericht Bearbeiten</h3>

<hr/>

<div class="row">
    <form asp-action="Edit">

        <div asp-validation-summary="All" class="text-danger"></div>

        <input type="hidden" asp-for="Id"/>

        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control"/>
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Country" class="control-label"></label>
                <select asp-for="CountryId" asp-items="@ViewBag.Countries" class="form-control"></select>
                <input asp-for="CountryId" class="form-control" type="hidden"/>
                <span asp-validation-for="Country.Name" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Cases" class="control-label"></label>
                <input asp-for="Cases" class="form-control"/>
                <span asp-validation-for="Cases" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Deaths" class="control-label"></label>
                <input asp-for="Deaths" class="form-control"/>
                <span asp-validation-for="Deaths" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Tests" class="control-label"></label>
                <input asp-for="Tests" class="form-control"/>
                <span asp-validation-for="Tests" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Vaccinations" class="control-label"></label>
                <input asp-for="Vaccinations" class="form-control"/>
                <span asp-validation-for="Vaccinations" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="ReproductionRate" class="control-label"></label>
                <input asp-for="ReproductionRate" class="form-control"/>
                <span asp-validation-for="ReproductionRate" class="text-danger"></span>
            </div>
        </div>

        <div class="col-xs-12">
            <input type="submit" value="Speichern" class="btn btn-primary"/>
            <a class="btn btn-danger" asp-action="Index">Abbrechen</a>
        </div>
        
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}